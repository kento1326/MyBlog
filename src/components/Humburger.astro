---
import Navigation from "./Navigation.astro";
---

<div class="hamburger" role="button" aria-label="Toggle menu" aria-expanded="false">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
    <span class="hamburger__text">menu</span>
</div>

<Navigation class="header-nav"></Navigation>

<style is:global>
  .hamburger {
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 5px;
    padding: 10px;
  }

  .header-nav {
  display: flex;
  z-index: 10;
  position: absolute;
  top: 0;
  right: -100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100vh;
  background: transparent;
  font-weight: 700;
  opacity: 0;
  transition: 0.6s;
  }
  
  .header-nav.isactive {
  position: fixed;
  top: 0;
  right: 0;
  background: lightblue;
  opacity: 1;
  transition: 0.6s;
  }

  .header-nav.isactive {
    display: flex; 
  }

  .hamburger.isactive span:nth-of-type(1) {
  top: 0;
  transform: translateX(-50%) rotate(225deg);
}

.hamburger.isactive span:nth-of-type(2) {
  opacity: 0;
}


.hamburger.isactive span:nth-of-type(3) {
  top: -4px;
  transform: translateX(-50%) rotate(-225deg);
}

  @media (min-width: 769px) {
    .header-nav {
      display: flex;
      position: static;
    }
  }
</style>

